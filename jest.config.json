{
  "testPathDirs": [
    "tests"
  ],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "unmockedModulePathPatterns": [
    "node_modules/react/",
    "node_modules/enzyme/"
  ],
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "coverageReporters": [
    "html",
    "lcov"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    ".*\/index.js",
    ".*\/constants.js"
  ],
  "coverageThreshold": {
    "global": {
      "statements": 95,
      "branches": 95,
      "functions": 95,
      "lines": 95
    },
    "each": {
      "statements": 95,
      "branches": 95,
      "functions": 95,
      "lines": 95
    }
  }
}
